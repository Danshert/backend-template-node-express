generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model user {
  id String @id @default(uuid())
  name String @db.VarChar(200)
  email String @unique
  emailValidated Boolean @default(true)
  password String
  img String?
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
}